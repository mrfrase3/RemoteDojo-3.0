<div class="heading-spacer"></div>
<div class="container">
	<div class="col-md-3"><div class="user-info-panel panel panel-primary" data-name="{{user.fullname}}" data-email="{{user.email}}" data-username="{{user.name}}" data-type="admin">
		<div class="panel-heading">
			<h3 class="panel-title">CoderDojo</h3>
		</div>
		<div class="panel-body">
				User info: <span class="info-fullname">{{user.fullname}}</span><br>
				Account type: Champion
				<a href="./logout" class="col-xs-12 btn btn-default btn-sm">Logout</a>
		</div>
	</div></div>
	<div class="col-md-9"><div class="profilePanel panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Modify users</h3>
		</div>
		<div class="panel-body">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#champion" data-toggle="tab" aria-expanded="true">Champion</a></li>
				<li class=""><a href="#mentor" data-toggle="tab" aria-expanded="false">Mentor</a></li>
				<li class=""><a href="#dojo" data-toggle="tab" aria-expanded="false">Dojo</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade active in" id="champion">
					<fieldset>
						<div class="form-group">
							<select class="champion-select user-select form-control" name="champion-list" data-id="champion">
								<option class="self" value="{{user.username}}" data-fullname="{{user.fullname}}" data-email="{{user.email}}" data-dojos="{{this.dojos}}" data-all-dojos="{{this.allDojos}}">
										{{user.fullname}}</option>
								{{#each champions}}
									<option class="db-option" value="{{this.username}}" data-fullname="{{this.fullname}}" data-email="{{this.email}}" data-dojos="{{this.dojos}}" data-all-dojos="{{this.allDojos}}">
										{{this.fullname}}</option>
								{{/each}}
							</select>
						</div>
					</fieldset>
					<fieldset>
						<div class="form-group">
							<label for="username">Username:</label>
							<input class="champion-input champion-username form-control" placeholder="" name="username" type="text" value="">
						</div>
						<div class="form-group">
							<label for="password">Password:</label>
							<input class="champion-input champion-password form-control" placeholder="********" name="password" type="password" value="">
						</div>
						<div class="form-group">
							<label for="email">Email:</label>
							<input class="champion-input champion-email form-control" placeholder="" name="email" type="text" value="">
						</div>
						<div class="form-group">
							<label for="fullname">Fullname:</label>
							<input class="champion-input champion-fullname form-control" placeholder="" name="fullname" type="text" value="">
						</div>
						<div class="form-group">
							<label for="dojo-list">Dojos: (hold shift or ctrl to select multiple)</label>
							<select multiple class="champion-input champion-dojos form-control" name="dojo-list" disabled>
								<option value="all">All</option>
								{{#each dojos}}
									<option class="db-option" value="{{this.dojoname}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
						<button class="submit-champion btn btn-lg btn-success btn-block">Submit changes</button>
					</fieldset>
				</div>
				<div class="tab-pane fade" id="mentor">
					<fieldset>
						<div class="form-group">
							<select class="mentor-select user-select form-control" name="mentor-list" data-id="mentor">
								<option value="" data-fullname="" data-email="" data-dojos="" data-all-dojos="">
										Add a new user</option>
								{{#each mentors}}
									<option class="db-option" value="{{this.username}}" data-fullname="{{this.fullname}}" data-email="{{this.email}}" data-dojos="{{this.dojos}}" data-all-dojos="{{this.allDojos}}">
										{{this.fullname}}</option>
								{{/each}}
							</select>
						</div>
					</fieldset>
					<fieldset>
						<div class="form-group">
							<label for="username">Username:</label>
							<input class="mentor-input mentor-username form-control" placeholder="" name="username" type="text" value="">
						</div>
						<div class="form-group">
							<label for="password">Password:</label>
							<input class="mentor-input mentor-password form-control" placeholder="********" name="password" type="password" value="">
						</div>
						<div class="form-group">
							<label for="email">Email:</label>
							<input class="mentor-input mentor-email form-control" placeholder="" name="email" type="text" value="">
						</div>
						<div class="form-group">
							<label for="fullname">Fullname:</label>
							<input class="mentor-input mentor-fullname form-control" placeholder="" name="fullname" type="text" value="">
						</div>
						<div class="form-group">
							<label for="dojo-list">Dojos: (hold shift or ctrl to select multiple)</label>
							<select multiple class="mentor-input mentor-dojos form-control" name="dojo-list">
								<option value="all" disabled>All</option>
								{{#each dojos}}
									<option class="db-option" value="{{this.dojoname}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
						<button class="submit-mentor btn btn-lg btn-success btn-block">Submit</button>
						<button class="remove btn btn-lg btn-danger btn-block" data-id="mentor">Delete user</button>
					</fieldset>
				</div>
				<div class="tab-pane fade" id="dojo">
					<fieldset>
						<div class="form-group">
							<select class="dojo-select user-select form-control" name="dojo_list" data-id="dojo">
								{{#each dojos}}
									<option class="db-option" value="{{this.dojoname}}" data-name="{{this.name}}" data-email="{{this.email}}" data-location="{{this.location}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
					</fieldset>
					<fieldset>
						<div class="form-group">
							<label for="dojoname">Dojoname:</label>
							<input class="dojo-input dojo-dojoname form-control" placeholder="" name="dojoname" type="text" value="">
						</div>
						<div class="form-group">
							<label for="name">Name:</label>
							<input class="dojo-input dojo-name form-control" placeholder="" name="name" type="text" value="">
						</div>
						<div class="form-group">
							<label for="location">Location:</label>
							<input class="dojo-input dojo-location form-control" placeholder="" name="location" type="text" value="">
						</div>
						<div class="form-group">
							<label for="email">Email:</label>
							<input class="dojo-input dojo-email form-control" placeholder="" name="email" type="text" value="">
						</div>
						<div class="form-group">
							<label for="password">Password:</label>
							<input class="dojo-input dojo-password form-control" placeholder="********" name="password" type="password" value="">
						</div>
						<button class="submit-dojo btn btn-lg btn-success btn-block">Submit</button>
						<button class="remove btn btn-lg btn-danger btn-block" data-id="dojo">Delete dojo</button>
					</fieldset>
				</div>
			</div>
		</div>
		<div class="panel-footer">
		</div>
	</div></div>
</div>
<div class="footer-spacer"></div>
