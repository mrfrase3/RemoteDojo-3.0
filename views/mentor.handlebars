							<button class="btn btn-success chat-btn-start" data-sessiontoken="\{{sessiontoken}}" id="req-btn-\{{cleanstok}}">Answer <i class="fa fa-phone"></i></button>
							<button class="btn btn-danger chat-btn-ignore" data-sessiontoken="\{{sessiontoken}}" id="req-ignore-btn-\{{cleanstok}}" disabled>Ignore <i class="fa fa-close"></i></button>
